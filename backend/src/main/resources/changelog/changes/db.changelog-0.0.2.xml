<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
<changeSet id="2-create-game" author="ranim">
    <createTable tableName="game">
        <column name="id" type="BIGINT" autoIncrement="true">
            <constraints primaryKey="true" nullable="false"/>
        </column>
        <column name="player1_id" type="BIGINT">
            <constraints nullable="false"/>
        </column>
        <column name="player2_id" type="BIGINT">
            <constraints nullable="false"/>
        </column>
        <column name="status" type="VARCHAR(20)">
            <constraints nullable="false"/>
        </column>
    </createTable>

    <addForeignKeyConstraint constraintName="fk_game_player1"
                             baseTableName="game"
                             baseColumnNames="player1_id"
                             referencedTableName="user"
                             referencedColumnNames="id"/>
    <addForeignKeyConstraint constraintName="fk_game_player2"
                             baseTableName="game"
                             baseColumnNames="player2_id"
                             referencedTableName="user"
                             referencedColumnNames="id"/>
</changeSet>

<changeSet id="3-create-move" author="ranim">
<createTable tableName="move">
    <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
    </column>
    <column name="game_id" type="BIGINT">
        <constraints nullable="false"/>
    </column>
    <column name="from_pos" type="VARCHAR(5)">
        <constraints nullable="false"/>
    </column>
    <column name="to_pos" type="VARCHAR(5)">
        <constraints nullable="false"/>
    </column>
    <column name="piece" type="VARCHAR(10)">
        <constraints nullable="false"/>
    </column>
    <column name="timestamp" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP"/>
</createTable>

<addForeignKeyConstraint constraintName="fk_move_game"
                         baseTableName="move"
                         baseColumnNames="game_id"
                         referencedTableName="game"
                         referencedColumnNames="id"/>
</changeSet>
</databaseChangeLog>
